    <a href="/" class="hiw_btn">
      <%= t('main.how_it_works.call_to_action') %>
    </a>
  </header>

  <section>
    <div class="hiw_preview"></div>

    <div class="hiw_features">
      <ul>
        <li class="hiw_publish">
          <h4><%= t('main.how_it_works.features.publish.title') %></h4>
