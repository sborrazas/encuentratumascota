<div class="modal" id="modal-sign-in" tabindex="-1" role="dialog" data-show="false" style="display: none;">
  <div class="modal-body">

    <%= form_for @user, url: sessions_path(format: :json) do |f| %>
      <p class="field">
        <%= f.label :email, 'Your Email' %>
        <%= f.text_field :email, placeholder: 'Email' %>
      </p>

      <p class="field">
        <%= f.label :password, 'Create Password' %>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'Contraseña' %>
      </p>

      <p><%= f.submit 'Iniciar sesión', class: 'btn btn-golden btn-block btn-large' %></p>
    <% end %>
  </div>
  <div class="modal-footer">
    <%= render partial: 'shared/auth_footer' %>
    <p class="register">¿No eres usuario? <a href="#" class="btn-sign-up">Reg&iacute;strate</a></p>
  </div>
</div>
