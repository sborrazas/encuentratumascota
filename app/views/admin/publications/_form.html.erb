<div class="control-group">
  <%= form.label :pet_name, 'Título', class: 'control-label' %>
  <div class="controls">
    <%= form.text_field :pet_name %>
  </div>
</div>

<div class="control-group">
  <%= form.label :age, 'Edad', class: 'control-label' %>
  <div class="controls">
    <%= form.text_field :age %>
  </div>
</div>

<div class="control-group">
  <%= form.label :description, 'Descripción', class: 'control-label' %>
  <div class="controls">
    <%= form.text_area :description, rows: 4 %>
  </div>
</div>

<div class="control-group">
  <%= form.label :phone, 'Teléfono', class: 'control-label' %>
  <div class="controls">
    <%= form.text_field :phone %>
  </div>
</div>

<!-- TODO Display map (with lat and lng) -->

<div class="control-group">
  <%= form.label :reward, 'Recompensa (opcional)', class: 'control-label' %>
  <div class="controls">
    <%= form.text_field :reward %>
  </div>
</div>

<div class="control-group">
  <%= form.label :publication_type, 'Tipo', class: 'control-label' %>
  <div class="controls">
    <%= form.select :publication_type, Publication::PUBLICATION_TYPES %>
  </div>
</div>

<div class="control-group">
  <%= form.label :breed, 'Raza', class: 'control-label' %>
  <div class="controls">
    <%= form.select :breed, Breed.all %>
  </div>
</div>

<div class="control-group">
  <%= form.label :lost_on, 'Perdido el', class: 'control-label' %>
  <div class="controls">
    <%= form.text_field :lost_on %><!-- TODO Datepicker -->
  </div>
</div>

<div class="control-group">
  <%= form.label :contact, 'Contacto', class: 'control-label' %>
  <div class="controls">
    <%= form.text_field :contact %>
  </div>
</div>

<% if current_user.is_admin? %>
  <div class="control-group">
    <%= form.label :status, 'Estado', class: 'control-label' %>
    <div class="controls">
      <%= form.select :status, Publication::STATUSES %>
    </div>
  </div>
<% end %>

