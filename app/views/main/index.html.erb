<% content_for :javascript do %>
  require(['require', 'app/main/index'], function (require) {
    require(['app/main/index'], function (view) {
      view.init(<%= {
        userSignedIn: !! current_user,
        publications: @publications,
        flash: @flash_messages
      }.to_json.html_safe %>);
    });
  });
<% end %>
