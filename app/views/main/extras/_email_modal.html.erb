<div class="modal" id="email-modal" tabindex="-1" role="dialog" data-show="false" style="display: none;">
  <div class="modal-body">
    <p><%= t('main.index.email_form.email_explanation') %></p>
    <%= form_for @user, url: users_path(format: :json), html: { id: 'update-email' } do |f| %>
      <p class="field">
        <%= f.label :email, t('models.user.email.label') %>
        <%= f.text_field :email, placeholder: t('models.user.email.placeholder') %>
      </p>

      <p><%= f.submit t('main.index.email_form.submit'), class: 'btn btn-block btn-large' %></p>
    <% end %>
  </div>
</div>
