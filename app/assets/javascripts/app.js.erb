var Petfinder = (function () {
    "use strict";

    return {

        map : null,
		imageLost:'<%= asset_path "lost.png" %>',
		imageFound:'<%= asset_path "found.png" %>',
		imageAdoption:'<%= asset_path "other.png" %>',

        initMap: function(){

            this.map = new GMaps({
                div: '#main-panel',
                lat: -34.90649,
                lng: -56.16348,
                zoom: 14,
            });

        this.populateMarkers();

        },

        populateMarkers: function(){

            var pins = [{lat: -34.90774,  lng: -56.17355},
                        {lat: -34.91170,  lng: -56.16460},
                        {lat: -34.90600,  lng: -56.16190},
                        {lat: -34.92600,  lng: -56.16590},
                        {lat: -34.90600,  lng: -56.16391},
                        {lat: -34.90600,  lng: -56.16392},
                        {lat: -34.914543, lng: -56.167560}];

            for (var i = 0; i < pins.length; i++) {

                this.map.addMarker({
                    lat: pins[i].lat,
                    lng: pins[i].lng,
                    icon: i % 3 === 0 ? this.imageLost :this.imageFound,
				 infoWindow: {
				          content: '<p>HTML Content</p>'
				        }
                });
                
            }


        }
    

    }; //end Module

})();